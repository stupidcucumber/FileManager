<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<BorderPane style="-fx-pref-width: 1000; -fx-pref-height: 600;"
            fx:controller="org.kostiuk.filemanager.HelloController" xmlns:fx="http://javafx.com/fxml">
    <padding>
    </padding>

    <top>
        <TilePane xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: #ececec; -fx-padding: 5;">
            <Button text="Info" xmlns:fx="http://javafx.com/fxml" onAction="#handleOnInfoClick"/>
            <Button text="Preferences" xmlns:fx="http://javafx.com/fxml" onAction="#handleOnPreferencesClick"/>
        </TilePane>
    </top>

    <left>
        <VBox xmlns:fx="http://javafx.com/fxml">

        </VBox>
    </left>

    <right>
        <VBox xmlns:fx="http://javafx.com/fxml">

        </VBox>
    </right>

    <bottom>
        <GridPane xmlns:fx="http://javafx.com/fxml">
            <TextField xmlns:fx="http://javafx.com/fxml"/>
            <Button text="Find" onAction="#handleOnFindClick"/>
        </GridPane>
    </bottom>

</BorderPane>